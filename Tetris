#include <iostream>
#include <SFML/Graphics.hpp>
#include <SFML/Window.hpp>
#include <time.h>

using namespace std;
using namespace sf;

const int M=20;
const int N=10;

int field[M][N]={0};

struct Point
int{x,y};
int a[4],b[4];

int figures[7][4]=
{
    1,3,5,7, //I
    2,4,5,7, //Z
    3,5,4,6, //S
    3,5,4,7, //T
    2,3,5,7, //l
    3,5,7,6, //J
    2,3,4,5, //O
};

int main()
{
    sf::RenderWindow window(sf::VideoMode(800,800), "Tetris");

    Texture t;
    t.loadFromFile("C:/Users/MikoÂ³aj Kuprowski/Desktop/Tetris1/tiles.png");

    Sprite s(t);
    s.setTextureRect(IntRect(0,0,25,25));

    /*int dx=0; bool rotate=0; int colorNum=1;*/


    sf::Event event;
      while (true)
        {

            while (window.pollEvent(event))
            {

                {
                    if (event.type == sf::Event::Closed)
                    window.close();

                int n=3;
                for (int i=0;i<4;i++)
                {
                    a[i].x=figures[n][i]%2;
                    a[i].y=figures[n][i]/2;
                }

                    /*if (event.type==Event::KeyPressed)
                        if (event.key.code==Keyboard::Up)  rotate=true;
                            else if (event.key.code==Keyboard::Left) dx=-1;
                            else if (event.key.code==Keyboard::Right) dx=1;*/
                }
            window.clear(Color::White);
            for(int i=0;i<4;i++)
            {
                s.setPosition(a[i].*18,a[i].y*18);
                window.draw(s);
            }
            window.display();
            }
        }
    return 0;
}
