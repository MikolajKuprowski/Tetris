#include <iostream>
#include <SFML/Graphics.hpp>
#include <SFML/Window.hpp>

using namespace std;


int main()
{
    sf::RenderWindow window(sf::VideoMode(1000,1000), "Tetris");
    sf::Event event;
      while (true)
        {
        window.clear();
            while (window.pollEvent(event))
            {

                {
                    if (event.type == sf::Event::Closed)
                    window.close();
                }

            window.display();
            }
        }
    return 0;
}
